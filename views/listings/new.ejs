<% layout("/layouts/boilerplate") %>


    <div class="row">
      <div class="col-8 offset-2">
        <br> <br>
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" name="listing[title]" placeholder="enter your title" required>
      <div class="valid-feedback">Title Looks Good</div>
      <div class="invalid-feedback">Title is required</div> 
      </div>
    
      <div class="mb-3"> 
       <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" required ></textarea>
     <div class="invalid-feedback">Short description required</div>   
    </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
       <input type="file" class="form-control" name="listing[image]" placeholder="enter image url" required>
      </div>
      
      <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input class="form-control" name="listing[price]" placeholder="1200" required>
      <div class="invalid-feedback">Enter a valid price</div>  
    </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
      <label for="country" class="form-label">Country</label>
      <input type="text" class="form-control" name="listing[country]" placeholder="add country" required>
     <div class="invalid-feedback">Enter a country name</div>    
    </div>
      
       <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="listing[location]" placeholder="add location" required>
       <div class="invalid-feedback">Enter a location</div> 
      </div>

  <div class="mb-3">
    <label class="form-label">Category</label>
      <select name="listing[category]" class="form-select" required>
        <option value="Trending">Trending</option>
        <option value="Rooms">Rooms</option>
       <option value="IconicCities">Iconic Cities</option>
         <option value="Mountains">Mountains</option>
       <option value="AmazingPools">Pools</option>
          <option value="Camping">Camping</option>
       <option value="Beach">Beach</option>
    <option value="Farms">Farms</option>
  </select>
</div>

      </div>
      <br> <br>
      <button class="btn btn-dark add-btn">Add</button>
      <br> <br>
    </form>
    </div>
    </div>
  
